<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.SettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Настройки"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/support_separator"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/settings_change_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тема приложения" />

        <TextView
            android:id="@+id/edit_importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Системная"
            android:textColor="@color/label_tertiary"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>